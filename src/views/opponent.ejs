<% if ( opponents ) { %>
    <div class="clear"></div>
    <% opponents.forEach(opponent => { %>
    <div class="opponent">
        <% if ( opponent.isWin ) { %>
            <div class="result success">Victoire</div>
        <% } else { %>
            <div class="result lost">Perdu</div>
        <% } %>
        <div class="level"><div><%= opponent.level %></div></div>
        <span class="name"><%= opponent.user.name %></span>
        <span class="class carac<%= opponent.class %>"></span>
        <div class="player"></div>
        <img src="https://hh.hh-content.com/pictures/hero/ico/<%= !opponent.user.ico ? 34 : opponent.user.ico %>.jpg" />
        <div class="ego">Ego <%= opponent.ego %></div>
        <div class="carac carac1"><%= opponent.carac1 %></div>
        <div class="carac carac2"><%= opponent.carac2 %></div>
        <div class="carac carac3"><%= opponent.carac3 %></div>
    </div>
    <% }); %>
<% } %>
